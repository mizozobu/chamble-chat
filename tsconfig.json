{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@entities/*": ["./src/entities/*"],
      "@utils/*": ["./src/utils/*"],
      "@src/*": ["./src/*"],
      "@protos/*": ["./protos/*"]
    }
  },
  "exclude": ["node_modules", "dist", "protos"]
}
